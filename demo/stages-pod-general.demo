# Let's getting started with kwokctl!
kwokctl -c ./kustomize/stage/pod/general/kustomization.yaml create cluster

# Create an nodes.
kwokctl scale node --replicas 2

# Apply a deployment and watch.
kubectl apply -f ./test/lifecycle/fake-pod-stages.yaml && timeout 20 kubectl get pod -w

# Get all pods.
kubectl get pod

# Delete the cluster.
kwokctl delete cluster

# That's all, enjoy it!
clear
